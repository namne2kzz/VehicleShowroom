@model Model.EF.Address
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title{
    XBOX Vehicle Showroom
}

@section jsFooter{
    <script src="~/Assets/client/js/controller/AddressController.js"></script>
}

<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-title">
                    <h2>Create New Adress</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BEGIN Main Container col2-right -->
<div class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            @using (Html.BeginForm("Create", "Address", FormMethod.Post))
            {
                <div class="col-main col-sm-12 wow bounceInUp animated animated" style="visibility: visible;">
                    <div id="messages_product_view"></div>
                    <div class="static-contain">


                        @Html.AntiForgeryToken()


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div  style="padding-bottom:50px;" class="form-group">
                            @Html.LabelFor(model => model.Province, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("Province", new SelectList(new string[] { }), new { @class = "form-control", @id = "ddlProvince" })
                                @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div  style="padding-bottom:50px;" class="form-group">
                            @Html.LabelFor(model => model.District, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("District", new SelectList(new string[] { }), new { @class = "form-control", @id = "ddlDistrict" })
                                @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div style="padding-bottom:50px;" class="form-group">
                            @Html.LabelFor(model => model.AddressDetail, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.AddressDetail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AddressDetail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="buttons-set">
                            <button type="submit" title="Submit" class="button submit"><span><span>Submit</span></span></button>
                        </div>

                    </div>

                </div>

            }
        </div>
        <!--row-->
    </div>
    <!--main-container-inner-->
</div>
<!--main-container col2-left-layout-->
