@section latestBlog{

    <div class="latest-blog wow bounceInUp animated animated container">
        <!--exclude For version 6 -->
        <div class="blog-home-inner">
            <div class="blog-title">
                <h2>Latest Blog post</h2>
            </div>
            <!--For version 1,2,3,4,5,6,8 -->
            <div class="row">

                @foreach (var item in listBlog)
                {
                    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4 blog-post">
                        <div class="blog_inner">
                            <div class="blog-img"> <a href="/Blog/Index"> <img style="width:400px;height:250px;" src="~/Assets/showroom/img/blog/@item.Image" alt=""> </a> </div>
                            <!--blog-img-->
                            <div class="blog-info">
                                <div class="post-date"> <span class="entry-date">@item.CreatedDate.ToShortDateString()</span> </div>
                                <ul class="post-meta">
                                    <li><i class="fa fa-user"></i>Posted by <a href="/Vehicle/ListVehicleByDealer?dealerID=@item.DealerID">@item.DealerName</a> </li>
                                </ul>
                                <h3><a href="/Blog/Index">@item.Name</a></h3>
                               
                            </div>
                        </div>
                        <!--blog_inner-->
                    </div>
                }
            </div>
        </div>
        <!--END For version 1,2,3,4,5,6,8 -->
        <!--exclude For version 6 -->
        <!--container-->
    </div>

}


@section popularBrand{

    <div class="logo-brand container">
        <div class="brand-title">
            <h2>Popular Brands</h2>
        </div>
        <div class="slider-items-products">
            <div id="brand-slider" class="product-flexslider hidden-buttons">
                <div class="slider-items slider-width-col6">
                    @foreach (var item in listBrand)
                    {
                        <!-- Item -->
                        <div class="item">
                            <div class="logo-item"><a href="#"><img style="width:100px; height:100px;" src="~/Assets/showroom/img/brand/@item.Image" alt="@item.Name"></a></div>
                        </div>
                        <!-- End Item -->
                    }


                </div>
            </div>
        </div>
    </div>

}

<section class=" wow bounceInUp animated">
    <div class="hot_deals slider-items-products container">
        <div class="new_title">
            <h2>All Branch Dealer</h2>
        </div>
        <div id="hot_deals" class="product-flexslider hidden-buttons">
            <div class="slider-items slider-width-col4 products-grid">
                @foreach (var item in listDealer)
                {
                    <!-- Item -->
                    <div class="item">
                        <div class="item-inner">
                            <div class="item-img">
                                <div class="item-img-info">
                                    <a href="/Vehicle/ListVehicleByDealer?dealerID=@item.ID" title="@item.DealerName" class="product-image"><img style="width:300px;height:200px;" src="~/Assets/showroom/img/dealer/@item.Avatar" alt="@item.DealerName"></a>
                                </div>
                            </div>
                            <div class="item-info">
                                <div class="info-inner">
                                    <div class="item-title"><a href="#" title="@item.DealerName">@item.DealerName</a> </div>
