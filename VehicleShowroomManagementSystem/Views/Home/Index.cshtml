
@{
    var customerSession = (VehicleShowroomManagementSystem.Models.UserLogin)Session[Common.Constants.USER_SESSION];
}

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var mainSlide = (List<Model.EF.Slide>)ViewBag.MainSlide;
    var extraSlide = (List<Model.EF.Slide>)ViewBag.ExtraSlide;
    var listDiscount = (List<Model.ViewModel.DiscountVehicle>)ViewBag.ListDiscount;
    var listFeature = (List<Model.ViewModel.FeatureVehicle>)ViewBag.ListFeature;
    var listBlog = (List<Model.ViewModel.BlogDealer>)ViewBag.ListBlog;
    var listBrand = (List<Model.EF.Brand>)ViewBag.ListBrand;
    var listDealer = (List<Model.EF.Dealer>)ViewBag.ListDealer;
}

@section title{

    XBOX Vehicle Showroom

}

@section mainSlide{

    <div class="home-slider5">
        <div id="thmg-slideshow" class="thmg-slideshow">
            <div id='rev_slider_4_wrapper' class='rev_slider_wrapper fullwidthbanner-container'>
                <div id='rev_slider_4' class='rev_slider fullwidthabanner'>
                    <ul>
                        @foreach (var item in mainSlide)
                        {
                            <li data-transition='random' data-slotamount='7' data-masterspeed='1000' data-thumb='~/Assets/showroom/img/slide/@item.Image'>
                                <img src='~/Assets/showroom/img/slide/@item.Image' data-bgfit='cover' data-bgrepeat='no-repeat' alt="banner" />
                                <div class="container">
                                    <div class="content_slideshow">
                                        <div class="row">
                                            <div>
                                                <div class="info">
                                                    <div class='tp-caption ExtraLargeTitle sft  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1100' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:2; white-space:nowrap;'><span>@item.Title</span> </div>
                                                    <div class='tp-caption LargeTitle sfl  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1300' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:3; white-space:nowrap;'><span style="font-weight:normal; display:block">@item.Description</span> @item.Detail </div>         
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <div class="tp-bannertimer"></div>
                </div>
            </div>
        </div>
    </div>



}



@section extraSlider{

    <div style="padding-top:50px;" id="top">
        <div class="container">
            <div class="row">
                @foreach (var item in extraSlide)
                {
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12"> <a href="#" data-scroll-goto="1"> <img src="~/Assets/showroom/img/slide/@item.Image" alt="promotion-banner1"> </a> </div>
                }


            </div>
        </div>
    </div>

}


@section onSale{

    <section class=" wow bounceInUp animated">
        <div class="hot_deals slider-items-products container">
            <div class="new_title">
                <h2>On Sale</h2>
                <div class="box-timer">
                    <div class="countbox_1 timer-grid"></div>
                </div>
            </div>
            <div id="hot_deals" class="product-flexslider hidden-buttons">
                <div class="slider-items slider-width-col4 products-grid">
                    @foreach (var item in listDiscount)
                    {
                        <!-- Item -->
                        <div class="item">
                            <div class="item-inner">
                                <div class="item-img">
                                    <div class="item-img-info">
                                        <a href="@Url.Action("VehicleDetail","Vehicle",new { vehicleId = item.VehicleID })" title="@item.Description" class="product-image"><img style="height:200px;width:300px;" src="~/Assets/dealer/img/vehicle/@item.Image" alt="@item.Description"></a>
                                        <div class="sale-label sale-top-right">@(item.SaleOff * 100)%</div>
                                        <div class="item-box-hover">
                                            <div class="box-inner">
                                                <div class="add_cart">
                                               
                                                    <a href=@(customerSession==null?"/Customer/Login":"/Cart/AddItem?vehicleId="+item.VehicleID) class="button btn-cart" type="button"></a>
                                                </div>
                                                <div class="product-detail-bnt"><a class="button detail-bnt"><span>Quick View</span></a></div>
                                                <div class="actions">
                                                    <span class="add-to-links"><a href="@Url.Action("AddCompare","Vehicle",new { vehicleId=item.VehicleID })" class="link-compare" title="Add to Compare"><span>Add to Compare</span></a> </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="item-info">
                                    <div class="info-inner">
                                        <div class="item-title"><a href="@Url.Action("VehicleDetail","Vehicle",new { vehicleId = item.VehicleID })" title="@item.Description">@item.VehicleName</a> </div>
                                        <div class="item-content">
                                            <div class="rating">
                                                <div class="ratings">
                                                    <div class="rating-box">
                                                        <div class="rating" style="width:100%"></div>
                                                    </div>
                                                
                                                </div>
                                            </div>
                                            <div class="item-price">
                                                <div class="price-box"><span class="regular-price"><span class="price">$@item.Price.ToString("N0")</span> </span> </div>
                                            </div>
                                            <div class="other-info">
                                                <div class="col-km"><i class="fa fa-gear"></i> @item.Style</div>
                                                <div class="col-engine"><i class="fa fa-tachometer"></i> @item.Color</div>
                                                <div class="col-date"><i class="fa fa-calendar"></i> @item.Model</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Item -->
                    }




                </div>
            </div>
        </div>
    </section>

}

