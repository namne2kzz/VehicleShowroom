                                        <div class="other-info">
                                            <div class="col-km"><i class="fa fa-envelope"></i> @item.Email</div>
                                            <div style="float:right" class="col-engine"><i class="fa fa-phone"></i> @item.Phone</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Item -->
